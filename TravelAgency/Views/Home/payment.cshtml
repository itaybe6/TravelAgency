@model TravelAgency.Models.order

@{
    ViewBag.Title = "payment";
}

<!DOCTYPE html>

<html>
<head>

    <link href="@Url.Content("~/CSS/NavBar1.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/CSS/home2.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/CSS/payment.css")"
          rel="stylesheet" type="text/css" />

    <title>home</title>

    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <div class="topnav">
        <a id="logo1" href="~/admin/adminHome">
            <img src="~/Photos/logo.png" alt="Logo" style="width:80px;">
        </a>
        <a href="/Home/home">Home</a>

        <a href="/Home/MyFlights">My Flights</a>

        <div class="floatRight">
            <a href="/Home/login">Log In</a>
            <a href="/Home/signUp">Sign Up  </a>
        </div>
    </div>


    <div class="titleFly">

        <h1 id="payTitle"> <strong>Payment</strong> </h1>

    </div>



    <div id="payForm">

        <form action="submitPay"  method="post">

            <p id="p1">
                Your number order is : <strong>@Model.numberOrder</strong>
                <br />
                The price is :<strong> @Model.price $</strong>

            </p>



            <label class="labels">Passport of the card owner </label>
            <input class="inputs" type="text" required  id="passport" name="passport" pattern="\d{8}"/>

            <br />

            <label class="labels">Card Number</label>
            <input class="inputs" type="text" id="cardNumber" name="cardNumber" required pattern="\d{16}" />

            <br />

            <label class="labels" >Year</label>
            <select class="inputs" id="year"  name="year"required>
                <option value=2023>2023</option>
                <option value=2024>2024</option>
                <option value=2025>2025</option>
                <option value=2026>2026</option>
                <option value=2027>2027</option>
                <option value=2028>2028</option>
                <option value=2029>2029</option>
            </select>

            <br />

            <label class="labels">Month</label>

            <select class="inputs" name="month" required>
                <option value=1>01</option>
                <option value=2>02</option>
                <option value=3>03</option>
                <option value=4>04</option>
                <option value=5>05</option>
                <option value=6>06</option>
                <option value=7>07</option>
                <option value=8>08</option>
                <option value=9>09</option>
                <option value=10>10</option>
                <option value=11>11</option>
                <option value=12>12</option>
            </select>


            <label class="labels">Keep credit information</label>
            <input type="checkbox" id="keep-credit-info" name="keep" >


            <input id="pay" type="submit" value="Pay" />

        </form>






    </div>




</body>


</html>


