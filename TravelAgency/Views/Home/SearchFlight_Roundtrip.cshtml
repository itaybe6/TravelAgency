                </tr>



            }

        </table>

    </div>



    <div id="tbl_four">

        <table id="tbl1" cellpadding="10px">

            <tr>
                <th>Flight Number</th>
                <th>Source</th>
                <th>Distanation</th>
                <th>Date Flight</th>
                <th>Time Flight</th>
                <th>Date Landing</th>
                <th>Time Landing</th>
                <th>Aviable Seats</th>
                <th>Price</th>
                <th>rated</th>

            </tr>



            @foreach (Fly fly in Model.rated)
            {
                <tr>
                    <th>@fly.flyNumber</th>
                    <th>@fly.sourceFly</th>
                    <th>@fly.destination</th>
                    <th>@fly.dateFly.ToShortDateString()</th>
