@model TravelAgency.ViewModel.FlyViewModel
@using TravelAgency.Models;
@using Newtonsoft.Json;


@{
    ViewBag.Title = "showFlights";
}

<html>

<head>
    <link href="@Url.Content("~/CSS/NavBar1.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/CSS/home2.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/CSS/showFlights_oneWay.css")"
          rel="stylesheet" type="text/css" />



    <title>showFlights</title>

    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <!-- navigation bar-->
    <div class="topnav">

        <a id="logo1" href="">
            <img src="~/Photos/logo.png" alt="Logo" style="width:80px;">
        </a>

        <div id="topnav-left">
            <a class="active" href="/Home/home">Home</a>
            <a href="/Home/MyFlights">My Flights</a>
            <div class="floatRight">
                <a href="/Home/login">Log In</a>
                <a href="/Home/signUp">Sign Up  </a>
            </div>

        </div>
    </div>



    <div id="tbl_one">
        <table id="tbl1" cellpadding="10px">

            <tr>
                <th>Flight Number</th>
                <th>Source</th>
                <th>Distanation</th>
                <th>Date Flight</th>
                <th>Time Flight</th>
                <th>Date Landing</th>
                <th>Time Landing</th>
                <th>Aviable Seats</th>
                <th>Price</th>

            </tr>



            @foreach (Fly fly in Model.flyList)
            {
                <tr>
                    <td>@fly.flyNumber</td>
                    <td>@fly.sourceFly</td>
                    <td>@fly.destination</td>
                    <td>@fly.dateFly</td>
                    <td>@fly.timeFly</td>
                    <td>@fly.dateLanding</td>
                    <td>@fly.timeLanding</td>
                    <td>@fly.aviableSeat </td>
                    <td>@fly.price</td>
                    <td> <a href="~/Views/Home/ShowSeats/@fly.flyNumber/@TempData["order"]">Choose Seats</a></td>

                </tr>

            }

        </table>

    </div>


    <div id="tbl_two">

        <table id="tbl1" cellpadding="10px">

            <tr>
                <th>Flight Number</th>
                <th>Source</th>
                <th>Distanation</th>
                <th>Date Flight</th>
                <th>Time Flight</th>
                <th>Date Landing</th>
                <th>Time Landing</th>
                <th>Aviable Seats</th>
                <th>Price</th>

            </tr>



            @foreach (Fly fly in Model.increase)
            {
                <tr>
                    <td>@fly.flyNumber</td>
                    <td>@fly.sourceFly</td>
                    <td>@fly.destination</td>
                    <td>@fly.dateFly</td>
                    <td>@fly.timeFly</td>
                    <td>@fly.dateLanding</td>
                    <td>@fly.timeLanding</td>
                    <td>@fly.aviableSeat </td>
                    <td>@fly.price</td>
                    <td> <a href="~/Views/Home/ShowSeats/@fly.flyNumber/@TempData["order"]">Choose Seats</a></td>

                </tr>

            }

        </table>

    </div>


    <div id="tbl_three">

        <table id="tbl1" cellpadding="10px">

            <tr>
                <th>Flight Number</th>
                <th>Source</th>
                <th>Distanation</th>
                <th>Date Flight</th>
                <th>Time Flight</th>
                <th>Date Landing</th>
                <th>Time Landing</th>
                <th>Aviable Seats</th>
                <th>Price</th>

            </tr>



            @foreach (Fly fly in Model.increase)
            {
                <tr>
                    <td>@fly.flyNumber</td>
                    <td>@fly.sourceFly</td>
                    <td>@fly.destination</td>
                    <td>@fly.dateFly</td>
                    <td>@fly.timeFly</td>
                    <td>@fly.dateLanding</td>
                    <td>@fly.timeLanding</td>
                    <td>@fly.aviableSeat </td>
                    <td>@fly.price</td>
                    <td> <a href="~/Views/Home/ShowSeats/@fly.flyNumber/@TempData["order"]">Choose Seats</a></td>

                </tr>

            }

        </table>

    </div>


    <form id="orderForm" action="orderFlight">
        <label id="orderLabel">Order by</label>


        <select id="orderBy">
            <option value="price_increase">price increase</option>
            <option value="price_decrease">price decrease</option>
            <option value="most_popular">most popular</option>
        </select>


    </form>

    <button id="sub" onclick="order_by()">submit</button>

    <script type="text/javascript">

       
        let sub = document.getElementById("sub");
        let element = document.getElementById("tbl_one");
        let increase = document.getElementById("tbl_two");
        let decrease = document.getElementById("tbl_three");

        increase.style.display = "none";
        decrease.style.display = "none";

        function order_by() {

            var select = document.getElementById("orderBy");
            var value = select.options[select.selectedIndex].value;

            if (value == "price_increase") {

                //increase option
                sub.addEventListener("click", () => {

                    decrease.style.display = "none";
                    element.style.display = "none";
                    increase.style.display = "block";
                    

                });

            }
            else if (value == "price_decrease") {

                sub.addEventListener("click", () => {

                    decrease.style.display = "block";
                    element.style.display = "none";
                    increase.style.display = "none";
                    

                });

            }
            
            
        }


    </script>


</body>


</html>




