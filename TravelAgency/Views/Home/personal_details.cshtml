@model TravelAgency.Models.Ticket
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link href="@Url.Content("~/CSS/NavBar1.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/CSS/home2.css")"
          rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/CSS/personalDetails.css")"
          rel="stylesheet" type="text/css" />



    <meta name="viewport" content="width=device-width" />
    <title>signUp</title>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



</head>

<body>


    <!-- Navigtion bar -->
    <div id="nav">
        <div class="topnav">

            <a id="logo1" href="~/admin/adminHome">
                <img src="~/Photos/logo.png" alt="Logo" style="width:80px;">
            </a>

            <a href="/Home/home">Home</a>
            <a href="/Home/MyFlights">My Flights</a>

            <div class="floatRight">

                <a href="/Home/login">Log In</a>
                <a href="/Home/signUp">Sign Up  </a>

            </div>
        </div>
    </div>
    <div id="enterFly">

        <div class="titleFly"> 

            <h1 id="test12" > <strong>Personal Details </strong> </h1> 

        </div>

        <div id="enterFlyForm">

            @using (Html.BeginForm("submit_personalDetails", "Ticket", FormMethod.Get))
            {

                <label class="dateLabel">First Name :</label>

                <div class="textbox"> @Html.TextBoxFor(m => m.firstName) @Html.ValidationMessageFor(x => x.firstName) </div>

                <label class="dateLabel">Last Name :</label>

                <div class="textbox">  @Html.TextBoxFor(m => m.lastName) @Html.ValidationMessageFor(x => x.lastName)</div>

                <label class="dateLabel">Passport : </label> <div class="textbox">  @Html.TextBoxFor(m => m.passport) @Html.ValidationMessageFor(x => x.passport)</div>


                <!-- Safe input that user cannot change-->
                <label class="dateLabel">Flight Number </label> <input readonly value="@Model.flyNUmber" name="flyNUmber" />
                <br />

                <label class="dateLabel">Seat </label> <input readonly value="@Model.seat" name="seat" />
                <br />

                <label class="dateLabel">Number Order </label> <input readonly value="@Model.orderNumber" name="orderNumber" />



                <input id="findFly" type="submit" value="Submit" />

            }

        </div>

    </div>


</body>




</html>


