@model TravelAgency.ViewModel.FlyViewModel
@using TravelAgency.Models;

@{

    ViewBag.Title = "editFly";
}

<!DOCTYPE html>

<html>
<head>

    <link href="@Url.Content("~/CSS/adminHome.css")"
          rel="stylesheet" type="text/css" />


    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <!-- navigation bar-->
    <div class="topnav">

        <a id="logo1" href="~/admin/adminHome">
            <img src="~/Photos/logo.png" alt="Logo" style="width:80px;">
        </a>

        <div id="topnav-left">
            <a href="~/admin/addFly">Add Flight</a>
            <a href="/admin/removeFly">Remove Flight</a>
            <a href="/admin/editFly">Edit Flight</a>
        </div>


        <div id="topnav-right">
            <a href="/Home/home">Home Page</a>
        </div>

    </div>

    <table id="tbl1">

        <tr id="tr1">
            <th>Flight Number</th>
            <th>Source</th>
            <th>Distanation</th>
            <th>Seats</th>
            <th>Price</th>
           

        </tr>

        @foreach (Fly fly in Model.flyList)
        {
            <tr>
                <th>@fly.flyNumber</th>
                <th>@fly.sourceFly</th>
                <th>@fly.destination</th>
                <th>@fly.flightSeat </th>
                <th>@fly.price</th>
                <th> <a class="choose" href="~/Views/admin/addEditFly/@fly.flyNumber" >Edit </a></th>
                
    
            </tr>
            
          

        }

    </table>

 
    <script src="~/JS/editFly.js"></script>

</body>


</html>

